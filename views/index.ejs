<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./css/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <title>SeriousMD Developer</title>
</head>
<body>
    <div class="navbar">
        <div class="nav-links">
            <a href="/">Appointments</a>
            <a href="/dashboard">Dashboard</a>
    </div>
    <h1>Appointment System</h1>
    <% for(var i = 0; i < contents.length; i++) { %>
        <div id = "<%= contents[i].apptid %>">
            <input type="checkbox" name="select" class="select-box">
            <h2>Appointment ID: <%= contents[i].apptid %></h2>
            <p>Appointment Status: <%= contents[i].apptstatus %></p>
            <p>Patient ID: <%= contents[i].appttype %> </p>
            <p>Island Group: <%= contents[i].islandgroup %></p>
            <p>Province: <%= contents[i].province %></p>
            <p>City: <%= contents[i].city %></p>
        </div>
    <% } %>

    <div style="position:sticky; bottom:0; height:50px; width:100%; max-width:100%; background-color: hotpink;" id="selected" hidden>
        <p>Selected: <span id="selected-number">0</span></p>
        <button>Delete</button>
        <button>Set Status</button>
    </div>

    <script>
        $('.select-box').on('click', function() {
            var selected = [];
            $('.select-box:checked').each(function() {
                selected.push($(this).parent().attr('id'));
            });
            $('#selected').show();
            $('#selected-number').html(selected.length);
        });
    </script>
</body>
</html>